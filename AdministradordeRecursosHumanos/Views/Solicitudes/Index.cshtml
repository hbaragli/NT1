    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoSolicitud)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tema)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Texto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicialRango)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaFinalRango)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_solicitud)
